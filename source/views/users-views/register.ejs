<%- include ('../partials/head') -%>

    <form action="/register/create" method="post" enctype="multipart/form-data">

        <main class="main-register">
            <h2>Crear cuenta</h2>
            <div class="container">

                <section class="nombre">
                    <label for="name">Nombre</label>
                    <input type="text" name="name" id="name" value="<%=(locals.data && locals.data.name) ? locals.data.name : null %>" />

                    <% if (locals.errores && locals.errores.name) { %>
                        <p class="feedback">
                            <%= locals.errores.name.msg %>
                        </p>
                        <% } %>
                </section>

                <section class="apellido">
                    <label for="name">Apellido</label>
                    <input type="text" name="lastname" id="lastname" value="<%=(locals.data && locals.data.lastname) ? locals.data.lastname : null %>" />

                    <% if (locals.errores && locals.errores.lastname) { %>
                        <p class="feedback">
                            <%= locals.errores.lastname.msg %>
                        </p>
                        <% } %>
                </section>

                <section class="telefono">
                    <label for="phone">Telefono</label>
                    <input type="number" name="phone" id="phone" value="<%=(locals.data && locals.data.phone) ? locals.data.phone : null %>" />

                    <% if (locals.errores && locals.errores.phone) { %>
                        <p class="feedback">
                            <%= locals.errores.phone.msg %>
                        </p>
                        <% } %>
                </section>

                <section class="pais">
                    <label for="pais">Pais</label>
                    <select name="pais" id="pais" value="<%=(locals.data && locals.data.pais) ? locals.data.pais : null %>">
                        <option value="">Seleccione la ciudad</option>
                        <option value="argentina">Argentina</option>
                        <option value="colombia">Colombia</option>
                        <option value="otro">Otro</option>
                    </select>

                    <% if (locals.errores && locals.errores.pais) { %>
                        <p class="feedback">
                            <%= locals.errores.pais.msg %>
                        </p>
                        <% } %>
                </section>

                <section class="email">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" value="<%=(locals.data && locals.data.email) ? locals.data.email : null %>" />

                    <% if (locals.errores && locals.errores.email) { %>
                        <p class="feedback">
                            <%= locals.errores.email.msg %>
                        </p>
                        <% } %>
                </section>

                <section class="password">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password" value="<%=(locals.data && locals.data.password) ? locals.data.password : null %>" />

                    <% if (locals.errores && locals.errores.password) { %>
                        <p class="feedback">
                            <%= locals.errores.password.msg %>
                        </p>
                        <% } %>
                </section>

                <section class="password">
                    <label for="password">Confirmar contraseña</label>
                    <input type="password" name="passwordCheck" id="passwordCheck" />
                </section>


                <section class="images">
                    <label for="images">Ingresar imagen</label>
                    <input type="file" name="image" id="image" />
                </section>

                <section class="botones">
                    <button type="submit">
                        Registrarse
                    </button>
                    <button type="button">
                        <a class="btn-login-register" href="/login">Iniciar sesion</a>
                    </button>
                </section>

            </div>
        </main>
    </form>
    <%- include ('../partials/footer') -%>