<%- include ("../partials/head") -%>
    <h1 class="center-product-category">
        <%=categoryName%>
    </h1>
    <div class="container-products">
        <%if(products.length > 0){%>
            <% for(var i = 0; i < products.length; i++){%>
                <div class="card">
                    <figure class="images-product">
                        <img src="/images/products/<%=products[i].image%>" alt="Aqui debe salir la foto">
                    </figure>
                    <div class="info-producs">
                        <h1>
                            <%=products[i].name%>
                        </h1>
                        <p>Precio: $
                            <%=products[i].price%>
                        </p>
                        <p>
                            <%=products[i].description%>
                        </p>
                        <div class="botones-product">
                            <button><a href="/products/detail/<%=products[i].sku%>">Ver más</a></button>
                            <button>Añadir al carro</button>
                        </div>
                    </div>
                </div>
                <% } %>
                    <% } else { %>
                        <h1>No hay datos</h1>
                        <% } %>
    </div>
    <%- include ('../partials/footer') -%>